# ═══════════════════════════════════════════════════════════════════════════
# HEALTHFLOW API - Environment Configuration
# ═══════════════════════════════════════════════════════════════════════════

# ────────────────────────────────────────────────────────────────────────────
# Application
# ────────────────────────────────────────────────────────────────────────────
NODE_ENV=development
API_PORT=3001
API_PREFIX=api
API_BASE_URL=http://localhost:3001

# ────────────────────────────────────────────────────────────────────────────
# Database (PostgreSQL)
# ────────────────────────────────────────────────────────────────────────────
DATABASE_URL="postgresql://healthflow:healthflow@localhost:5432/healthflow?schema=public"

# ────────────────────────────────────────────────────────────────────────────
# Redis
# ────────────────────────────────────────────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ────────────────────────────────────────────────────────────────────────────
# JWT Authentication
# ────────────────────────────────────────────────────────────────────────────
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRATION=7d

# ────────────────────────────────────────────────────────────────────────────
# CORS
# ────────────────────────────────────────────────────────────────────────────
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# ────────────────────────────────────────────────────────────────────────────
# Rate Limiting
# ────────────────────────────────────────────────────────────────────────────
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ────────────────────────────────────────────────────────────────────────────
# Email (SMTP)
# ────────────────────────────────────────────────────────────────────────────
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@healthflow.com

# ────────────────────────────────────────────────────────────────────────────
# SMS (Twilio)
# ────────────────────────────────────────────────────────────────────────────
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ────────────────────────────────────────────────────────────────────────────
# Push Notifications (Firebase)
# ────────────────────────────────────────────────────────────────────────────
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# ────────────────────────────────────────────────────────────────────────────
# Storage - AWS S3
# ────────────────────────────────────────────────────────────────────────────
STORAGE_PROVIDER=LOCAL
STORAGE_BUCKET=healthflow-files
STORAGE_LOCAL_PATH=./storage

# AWS S3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_ACCOUNT_NAME=

# Google Cloud Storage
GCP_PROJECT_ID=
GCP_KEY_FILE=

# MinIO
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=
MINIO_SECRET_KEY=

# CDN
STORAGE_CDN_URL=

# Upload Limits
STORAGE_MAX_FILE_SIZE=104857600
STORAGE_VIRUS_SCAN_ENABLED=false

# ────────────────────────────────────────────────────────────────────────────
# RNDS - Rede Nacional de Dados em Saúde (DATASUS)
# ────────────────────────────────────────────────────────────────────────────
RNDS_ENVIRONMENT=HOMOLOGATION
RNDS_AUTH_URL=https://ehr-auth-hmg.saude.gov.br/api/token
RNDS_EHR_URL=https://ehr-services-hmg.saude.gov.br
RNDS_CERTIFICATE_PATH=
RNDS_CERTIFICATE_PASSWORD=

# ────────────────────────────────────────────────────────────────────────────
# Telemedicine (WebRTC)
# ────────────────────────────────────────────────────────────────────────────
WEBRTC_STUN_SERVER=stun:stun.l.google.com:19302
WEBRTC_TURN_SERVER=
WEBRTC_TURN_USERNAME=
WEBRTC_TURN_PASSWORD=

# Daily.co (Alternative)
DAILY_API_KEY=
DAILY_DOMAIN=

# ────────────────────────────────────────────────────────────────────────────
# Payment Gateway
# ────────────────────────────────────────────────────────────────────────────
# Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# PagSeguro
PAGSEGURO_EMAIL=
PAGSEGURO_TOKEN=
PAGSEGURO_SANDBOX=true

# ────────────────────────────────────────────────────────────────────────────
# External APIs
# ────────────────────────────────────────────────────────────────────────────
# ViaCEP
VIACEP_URL=https://viacep.com.br/ws

# ANVISA (Medicamentos)
ANVISA_API_URL=

# ANS (Operadoras de Saúde)
ANS_API_URL=

# ────────────────────────────────────────────────────────────────────────────
# Monitoring & Logging
# ────────────────────────────────────────────────────────────────────────────
LOG_LEVEL=debug
SENTRY_DSN=

# ────────────────────────────────────────────────────────────────────────────
# Feature Flags
# ────────────────────────────────────────────────────────────────────────────
FEATURE_TELEMEDICINE_ENABLED=true
FEATURE_GAMIFICATION_ENABLED=true
FEATURE_RNDS_ENABLED=false
FEATURE_FHIR_ENABLED=true
